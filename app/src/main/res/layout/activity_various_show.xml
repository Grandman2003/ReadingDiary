<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.VariousShow">

    <include
        android:id="@+id/appbarVariousShow"
        layout="@layout/long_click_toolbar">

    </include>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/various_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbarVariousShow"
        android:paddingBottom="60dp"
        />

    <Button
        android:id="@+id/addVariousItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:text="Добавить запись" />
</RelativeLayout>